package com.jorge.cursojava.aula4;

import java.util.Scanner;

public class OperadoresRelacionais {

	public static void main(String[] args) {
		
		int valor1 = 1;
		int valor2 = 2;
		
		System.out.println("valor1 == valor2: " + (valor1 == valor2));
		System.out.println("valor1 != valor2: " + (valor1 != valor2));
		System.out.println("valor1 > valor2: " + (valor1 > valor2));
		System.out.println("valor1 >= valor2: " + (valor1 >= valor2));
		System.out.println("valor1 < valor2: " + (valor1 < valor2));
		System.out.println("valor1 <= valor2: " + (valor1 <= valor2));
		
		System.out.println("Digite as 4 notas bimestrais, para saber a media");
		Scanner scan = new Scanner(System.in);
		String num1 = scan.next();
		String num2 = scan.next();
		String num3 = scan.next();
		String num4 = scan.next();
		
		int converter1 = Integer.parseInt(num1);
		int converter2 = Integer.parseInt(num2);
		int converter3 = Integer.parseInt(num3);
		int converter4 = Integer.parseInt(num4);
		
		int resultado = (converter1 + converter2 + converter3 + converter4) / 4;
		System.out.println("A Soma dos numeros informados Ã©: " + resultado);

	}

}
